<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_view_round"
        android:alpha="0.7"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <!--"android:alpha"介於0~1，數字愈小愈透明-->

    <TextView
        android:id="@+id/text_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/ed_budget"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="請輸入預算 : "
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/unit_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toLeftOf="@+id/ed_budget"
        app:layout_constraintStart_toEndOf="@+id/ed_budget"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ed_budget"/>

    <EditText
        android:id="@+id/ed_dayRemind"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="過期提醒 : 幾 "
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/ed_budget"
        app:layout_constraintTop_toBottomOf="@id/ed_budget"
        />

    <TextView
        android:id="@+id/unit_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天前"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/ed_dayRemind"
        app:layout_constraintTop_toTopOf="@id/ed_dayRemind"
        app:layout_constraintBottom_toBottomOf="@+id/ed_dayRemind"/>

    <Button
        android:id="@+id/verify"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/check2"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/unit_day"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>